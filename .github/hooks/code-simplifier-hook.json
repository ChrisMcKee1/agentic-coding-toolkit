{
  "version": 1,
  "hooks": {
    "agentStop": [
      {
        "type": "command",
        "powershell": ".github/hooks/scripts/run-code-simplifier.ps1",
        "bash": ".github/hooks/scripts/run-code-simplifier.sh",
        "cwd": ".",
        "timeoutSec": 600
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": ".github/hooks/scripts/run-code-simplifier.sh",
        "windows": "powershell -File .github/hooks/scripts/run-code-simplifier.ps1",
        "cwd": ".",
        "timeout": 600
      }
    ]
  }
}
